{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      // Executa o Electron da pasta node_modules
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      // Argumento para o Electron iniciar na raiz do projeto
      "args": ["."],
      // Diretório de trabalho
      "cwd": "${workspaceFolder}",
      // Captura a saída para o painel integrado (útil para ver logs do console)
      "outputCapture": "std",
      // Pula os arquivos internos do Node ao step pela depuração
      "skipFiles": ["<node_internals>/**"],
      // Variáveis de ambiente (adicione outras se necessário)
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "true"
      },
      // Se for necessário expor uma porta para o remote debugging (por exemplo, se precisar debugar o conteúdo renderizado ou para comunicação com o Puppeteer),
      // descomente a linha abaixo e ajuste a porta conforme necessário:
      // "runtimeArgs": ["--remote-debugging-port=9222"]
      //
      // Caso esteja utilizando TypeScript ou um bundler que gera source maps, pode ser interessante adicionar também:
      // "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      //
      // Caso sua aplicação tenha um segundo processo (como o renderer process) e você queira debugar, terá que configurar uma sessão de "attach"
      // em separado direcionada à porta de depuração do processo renderer.
    }
  ]
}
